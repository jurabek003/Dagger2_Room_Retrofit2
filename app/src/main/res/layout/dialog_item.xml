<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FD00EDF4"
    android:layout_height="match_parent">
<ImageButton
    android:id="@+id/btn_img_select"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp"
    android:layout_gravity="center"
    android:layout_marginVertical="@dimen/_10sdp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Ism"
            android:fontFamily="serif"
            android:inputType="textAutoComplete"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dialog_last_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Familya"
            android:fontFamily="serif"
            android:inputType="textAutoComplete"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dialog_manzil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Manzil"
            android:fontFamily="serif"

            android:inputType="textAutoComplete"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dialog_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="serif"
            android:hint="Tel"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dialog_summa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:selectAllOnFocus="true"
            android:fontFamily="serif"
            android:hint="Summa"
            android:inputType="number"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dialog_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:backgroundTint="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="#304FFE"
        android:text="Save"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="serif"/>
</LinearLayout>